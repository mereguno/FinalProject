<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BodyText">

    <TextView
        android:id="@+id/expanded_title_box"
        android:layout_width="195dp"
        android:layout_height="86dp"
        android:layout_marginTop="92dp"
        android:text="@string/title_expanded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/body_text_box"
        android:layout_width="260dp"
        android:layout_height="386dp"
        android:layout_marginTop="32dp"
        android:text="@string/body_expanded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expanded_title_box" />
</androidx.constraintlayout.widget.ConstraintLayout>